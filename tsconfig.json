{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "./*": ["./*", "./../dist/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "ts-node": {
    "esm": true
  }
}
