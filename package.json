{
  "name": "pet-db-api",
  "version": "1.0.0",
  "description": "Api for Pet, a pet adoption network",
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "build": "ttsc --project tsconfig.json",
    "start": "node ./dist/src/server.js",
    "dev": "nodemon ./src/server.ts",
    "dev:test": "dotenv -e .env.test nodemon src/server.ts",
    "prisma-prod": "prisma db push && prisma migrate deploy",
    "prisma-test": "dotenv -e .env.test prisma migrate reset --skip-seed",
    "test": "npm run prisma-test && NODE_OPTION=--experimental-vm-modules dotenv -e .env.test jest -- -i",
    "test:unit": "NODE_OPTION=--experimental-vm-modules dotenv -e .env.test jest -- -i --coverage --testPathPattern=./tests/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/v-aguiar/pet-api.git"
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "postgresql",
    "prisma",
    "jest",
    "supertest"
  ],
  "author": "Victor Aguiar Ribeiro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/v-aguiar/pet-api/issues"
  },
  "homepage": "https://github.com/v-aguiar/pet-api#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chalk": "^5.0.1",
    "cors": "^2.8.5",
    "cryptr": "^6.0.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@prisma/client": "^4.1.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.6.4",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prisma": "^4.1.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.7.4",
    "typescript-transform-paths": "^3.3.1"
  }
}